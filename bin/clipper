#!/bin/sh -eu

# 現在のディレクトリ
current_dir=$(pwd)

# 引数で指定されたディレクトリ
working_dir="${*}"

# リッピング前のディレクトリ構造を名前付きパイプに流す
ls "${working_dir}" > /tmp/pre.fifo &

#引数があれば真
if [ -n "${working_dir}" ] ; then

	cd "${working_dir}"

	# 非対話的に処理,カバーアートを取得
	abcde -N -G -B

else

	# エラーメッセージを出力
	echo "Error: please enter args" > /dev/stderr

fi

cd "${current_dir}"
