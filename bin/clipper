#!/bin/sh -eu

# ====== 変数の設定 ======
# ロケールの設定
export LC_ALL=C
export LANG=C

# 実行時点のディレクトリ
pre_dir="${PWD}"

# 引数で指定されたディレクトリ
working_dir="${*}"

# カバーアートのディレクトリ
coverart="albumart_backup"
# ====== 変数の設定ここまで ======


#引数があれば真
if [ -n "${working_dir}" ] ; then

	cd "${working_dir}"

	# 非対話的に処理,カバーアートを取得,埋め込み
	abcde -N -G -B &&

	# カバーアートのパスに移動
	cd "$(find "${PWD}" -d -name "${coverart}" 2> /dev/null)"

	mv Folder.jpg ../

	cd ../

	rmdir "${coverart}" 

	cd "${pre_dir}"

else

	# エラーメッセージを出力
	echo "Error: please enter args" > /dev/stderr

fi
