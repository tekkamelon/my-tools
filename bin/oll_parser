#!/bin/sh -eu

# ====== 変数の設定 ======
# ロケールの設定
export LC_ALL=C
export LANG=C

# GNU coreutilsの挙動をPOSIXに準拠
export POSIXLY_CORRECT=1
# ====== 変数の設定ここまで ======


# パーサー本体
parser () {

	cat - |

	# シフトJISからUTF-8に変換
	iconv -f sjis -t utf8 |

	# 区切り文字をカンマに指定
	awk -F"," 'BEGIN{

		# 出力時の区切り文字をカンマに指定
		OFS = ","

	}

	{

		# 1行目以外で真
		if(NR != 1){

			# 不要な箇所の削除
			gsub("\"=\"" , "")
			gsub("\"\"" , "")
			gsub("\"" , "")

			print $0

		}

	}' |

	cut -d"," -f1-16

}

# 標準入力の有無を確認,あれば真,無ければ偽
if [ -p /dev/stdin ] ; then

	# 真の場合は標準入力を変数に代入,非対話的に処理
	input_string=$(cat - )

    echo "${input_string}" | parser
  
# 偽の場合は引数の数を確認,0以外で真
elif [ "${#}" != 0 ] ; then

	# 第1引数を変数に代入
	args="${1}"

	# シフトJISからUTF-8に変換
	cat < "${args}" | parser

else

	# 偽の場合はメッセージを標準エラー出力に表示
	echo "please stdin!" 1>&2

fi

