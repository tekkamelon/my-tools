#!/usr/bin/awk -f

# 変数の処理
BEGIN {

	# 区切り文字の処理
	if(ofs == ""){

		OFS = ","

	}else{

		OFS = ofs

	}

	# 入力フィールド区切り文字を設定
	FS = "|"
	# 出力フィールド区切り文字を設定
	OFS = ","

}

# 第2フィールド以外を処理
NR != 2 {

# 空行を除外
	if($0 != ""){

		# 第1フィールドと最終フィールド以外を出力
		# "NF-1"までループし最終フィールドを除外
		for(i = 2; i <= NF - 1; i++){

			if (i > 2) printf OFS
			printf $i
			
		}
		print ""
	}

}
