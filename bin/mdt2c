#!/usr/bin/awk -f


# 変数の処理
BEGIN {

	# 区切り文字の処理
	if(ofs == ""){

		OFS ="," 

	}else{

		FS = ofs

	}

	# 区切り文字を指定
	FS = "|"

}

# 第2フィールド以外を処理
NR != 2{

	# OFSを$0に反映させるためのフィールド操作
	$1 = $1	

	# 空行を除外
	if($0 != ""){ 

		# 第1フィールドと最終フィールド以外を出力
		# iがフィールド数になるまで1づつ増加
		for(i=2; i<NF; i++) {

			if(i>2) printf OFS
			printf $i

		}


		# 改行を出力
		print ""

	 }

}
