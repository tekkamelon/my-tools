#!/bin/sh -e

# ====== 変数の設定 ======
# ロケールの設定
export LC_ALL=C
export LANG=C

# "git diff"の結果
git_diff_result=$(git diff)
# ====== 変数の設定ここまで ======


# "git_diff_result"があれば真
if [ -n "${git_diff_result}" ] ; then

	echo "${git_diff_result}" |

	# リードオンリーモードで起動,各種設定を行う
	nvim - -R -c "set number" -c 'let mapleader="\<Space>"' -c "map <leader>q :q<Enter>"

else

	# 偽の場合はステータスを表示
	git status

fi

