#!/bin/sh

# パイプからの入力を変数に代入
string=$(cat - )

# 第1引数を変数に代入
args1="${1}"

logfile="/tmp/tbug.log"

# "/tmp/tbug.log"の有無を確認,無ければファイルを作成
if [ -z "${logfile}" ] ; then

	echo "" >| /tmp/tbug.log

fi

# 引数が"-q"ならば真,それ以外は偽
if [ "${args1}" = "-q" ] ; then

	# 真の場合はファイルに追記
	echo "${string}" >> /tmp/tbug.log

else

	# 偽の場合はteeでファイルに追記し出力
	echo "${string}" | tee -a /tmp/tbug.log

fi

